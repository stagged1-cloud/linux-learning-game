# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === Database Configuration ===
DATABASE_URL=postgresql://postgres:password@localhost:5432/linux_game
POSTGRES_PASSWORD=password

# === JWT Configuration ===
# Generate a secure random string (minimum 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_characters

# === LLM API Keys ===
# Groq API (free tier: 25 requests/min)
# Get your key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face API (optional, for multi-LLM consensus)
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Claude API (optional, premium tier)
# Get your key at: https://console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key_here

# === Application Configuration ===
NODE_ENV=development
PORT=5000

# === Frontend Configuration ===
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379

# === Security ===
# Set to 'true' in production
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# === Session Configuration ===
SESSION_SECRET=your_session_secret_here_min_32_characters
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000

# === Docker Configuration ===
# Docker socket path (default for Linux)
DOCKER_SOCKET=/var/run/docker.sock
# Sandbox container ID or name to use for command execution
SANDBOX_CONTAINER_ID=linux-sandbox
# Command execution timeout in milliseconds
COMMAND_TIMEOUT=5000

# === File Upload Configuration (Phase 2) ===
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.log,.pcap,.hl7,.dcm,.txt
